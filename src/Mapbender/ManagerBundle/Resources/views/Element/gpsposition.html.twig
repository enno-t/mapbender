<script type="text/javascript">
    const $triggerInput = $('#form_configuration_centerOnFirstPosition');
    const $dependentInput = $('#form_configuration_zoomToAccuracyOnFirstPosition');
    const onChange = function() {
        if ($triggerInput.is(':checked')) {
            $dependentInput.removeAttr('disabled');
        } else {
            $dependentInput.attr('disabled', 'disabled');
        }
    };
    $triggerInput.on('change', onChange);
    onChange();
</script>
