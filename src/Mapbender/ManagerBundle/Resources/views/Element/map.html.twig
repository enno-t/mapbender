
<div class="elementFormMap">
    {{ form_row(form.title) }}
    {{ form_row(form.configuration.layersets) }}
    {{ form_row(form.configuration.tileSize) }}
    {{ form_row(form.configuration.srs) }}
    <div class="row">
        {{ form_label(form.configuration.extent_max) }}
        <div class="col-sm-9">
            <div class="row singleRow">
                <div class="col-sm-6">{{ form_row(form.configuration.extent_max.0) }}</div>
                <div class="col-sm-6">{{ form_row(form.configuration.extent_max.1) }}</div>
            </div>
            <div class="row singleRow">
                <div class="col-sm-6">{{ form_row(form.configuration.extent_max.2) }}</div>
                <div class="col-sm-6">{{ form_row(form.configuration.extent_max.3) }}</div>
            </div>
        </div>
        <div class="col-sm-1">
            {{ form_help(form.configuration.extent_start) }}
        </div>
    </div>
    <div class="row">
        {{ form_label(form.configuration.extent_start) }}
        <div class="col-sm-9">
            <div class="row singleRow">
                <div class="col-sm-6">{{ form_row(form.configuration.extent_start.0) }}</div>
                <div class="col-sm-6">{{ form_row(form.configuration.extent_start.1) }}</div>
            </div>
            <div class="row singleRow">
                <div class="col-sm-6">{{ form_row(form.configuration.extent_start.2) }}</div>
                <div class="col-sm-6">{{ form_row(form.configuration.extent_start.3) }}</div>
            </div>
        </div>
        <div class="col-sm-1">
            {{ form_help(form.configuration.extent_start) }}
        </div>
    </div>
    {{ form_rest(form.configuration) }}
</div>
<script type="text/javascript">
    $('.elementFormMap .choiceExpandedSortable').sortable({axis: "y"});
</script>
