{% for item in items %}
  {%- if item.subroutes -%}
  <li class="dropdown bs-dropdown">
    <a href="{{ item.route ? path(item.route) : '#' }}" data-target="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
      {{ item.title|trans }}
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      {%- if item.route -%}
      <li>
        <a href="{{ path(item.route) }}">{{ item.title | trans }}</a>
      </li>
      {%- endif %}
      {% include '@MapbenderManager/Index/menu-items.html.twig' with {'items': item.subroutes} %}
    </ul>
  </li>
  {%- else -%}
  <li{% if item.active %} class="active"{% endif %}>
    <a href="{{ path(item.route) }}">{{ item.title|trans }}</a>
  </li>
  {%- endif -%}
{% endfor %}
