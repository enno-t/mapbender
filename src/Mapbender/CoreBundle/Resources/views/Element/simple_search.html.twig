<form>
    <div class="autocompleteWrapper">
        <div class="input-group ps-1">
            <input type="text" class="form-control searchterm"
                   minlength="2"
                   required="required"
                   aria-label="{{ 'mb.core.simplesearch.input.searchterm'|trans }}"/>
            {% set class = (configuration_titles is defined) ? ' me-6' : ' me-5' %}
            <button class="button-close hover-highlight-effect -fn-reset{{ class }}" type="reset"
                    aria-label="{{ 'mb.core.simplesearch.input.clear'|trans }}">
                <i class="fa fas fa-xmark"></i>
            </button>
            {% if configuration_titles is defined %}
                <div class="dropdown -fn-simple_search-toggle-dropdown" href="#">
                    <select class="hiddenDropdown -fn-simple_search-select-configuration">
                        {% for title in configuration_titles %}
                            <option value="{{ loop.index - 1 }}">{{ title }}</option>
                        {% endfor %}
                    </select>
                    <div class="dropdownValue iconDown hide-value"></div>
                    <ul class="dropdownList"></ul>
                </div><!-- /btn-group -->
            {% endif %}
            <button class="btn btn-outline-secondary -fn-search" role="search"
                 title="{{ 'mb.core.simplesearch.input.search'|trans }}"
                 aria-label="{{ 'mb.core.simplesearch.input.search'|trans }}">
                <i class="fas fa-magnifying-glass"></i>
            </button>
        </div>
    </div>
</form>
