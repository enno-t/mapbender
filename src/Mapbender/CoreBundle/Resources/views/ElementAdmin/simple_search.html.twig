{% form_theme form 'MapbenderCoreBundle:form:fields_horizontal.html.twig' %}
<div class="extraWideLabelForm">
    {{ form_row(form.title) }}
    {%- if form.configuration.anchor is defined -%}
    {{- form_row(form.configuration.anchor) -}}
    {%- endif -%}
    <div class="row mb-3">
        <label class="form-label required">
            {{ 'mb.core.simplesearch.admin.configurations'| trans }}
        </label>
        {{ form_widget(form.configuration.configurations) }}
    </div>
</div>
<script type="text/javascript">
    // enable Bootstrap Popover:
    const popoverTriggerList = document.querySelectorAll('[data-bs-toggle="popover"]');
    const popoverList = [...popoverTriggerList].map(popoverTriggerEl => new bootstrap.Popover(popoverTriggerEl));
</script>
