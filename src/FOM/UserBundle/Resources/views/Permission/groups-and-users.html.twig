{% if (subjects|length > 0) %}
  {% include '@MapbenderManager/fragments/filter-group.html.twig' with {filterTargetId: 'listFilterPermissionSubjects'} %}

  <table id="listFilterPermissionSubjects" class="table table-outlined">
    <thead>
      <tr class="doNotFilter">
        <th>{{ "fom.user.permissions.groups_users.name"|trans }} </th>
      </tr>
    </thead>
    <tbody>
      {% for subject in subjects %}
          {# @var subject \FOM\UserBundle\Security\Permission\AssignableSubject #}
        <tr class="filterItem">
          <td>
            <div class="checkbox">
              <label>
                <input type="checkbox" data-label="{{ subject.title }}" data-icon="{{ subject.iconClass }}"
                       value="{{ subject.subjectJson }}" />
                <i class="{{ subject.iconClass }}"></i>&nbsp;{{ subject.title }}
              </label>
            </div>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% else %}
  <p>{{"fom.user.permissions.groups_users.no_groups_users"|trans}}</p>
{% endif %}
